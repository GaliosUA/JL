<Window x:Class="JapaneseLookup.GUI.MiningSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Topmost="True"
        Title="MiningSetupWindow" Width="480" Height="540" Closing="Window_Closing" Background="Black">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10,10,10,10">
            <StackPanel Margin="10">
                <ComboBox x:Name="ComboBoxDeckNames" Width="200" Margin="0,10,30,0" />
                <Button x:Name="ButtonRefresh" Click="ButtonRefresh_Click" Width="100" Margin="0,10,15,0" HorizontalAlignment="Right">Refresh</Button>
                <ComboBox x:Name="ComboBoxModelNames" Width="200" Margin="0,10,30,0" />

                <Separator Height="29" />

                <Button x:Name="ButtonGetFields" Click="ButtonGetFields_Click" Width="150" Content="Get Fields" />
                <StackPanel x:Name="StackPanelFields" Margin="10" />

                <Separator Height="29" />

                <Button x:Name="ButtonSave" Click="ButtonSave_Click" Width="100" Content="Save" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>