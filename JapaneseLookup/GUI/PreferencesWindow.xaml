<Window x:Class="JapaneseLookup.GUI.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"  
        xmlns:local="clr-namespace:JapaneseLookup.GUI"
        mc:Ignorable="d"
        Title="PreferenceWindow" Height="695" Width="559" Topmost="True" Closing="Window_Closing" SizeToContent="Manual" ScrollViewer.CanContentScroll="True" VerticalAlignment="Top" Background="#FFE5E5E5">
    <Grid>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="25,0,0,19" VerticalAlignment="Bottom" Width="80" Click="SaveButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,20,19" VerticalAlignment="Bottom" Width="82" Click="CancelButton_Click"/>
        <TabControl TabStripPlacement="Top" VerticalContentAlignment="Stretch" Margin="0,0,0,50" Background="#F3E7E7E7">
            <TabItem Header="General">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left" Margin="25,25,0,0" Text="Maximum Search Length" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="175"/>
                    <WindowsFormsHost  Margin="0,24,20,0" Padding="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Height="30">
                        <wf:NumericUpDown x:Name="MaxSearchLengthNumericUpDown" BorderStyle="FixedSingle"  Maximum="100" Minimum="1" Margin="0,0,0,0" Padding="0,0,0,0" Height="50"/>
                    </WindowsFormsHost>
                    <TextBlock HorizontalAlignment="Left" Margin="25,62,0,0" Text="Frequency List" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <ComboBox x:Name="FrequencyListComboBox" HorizontalAlignment="Right" Margin="0,66,20,0" VerticalAlignment="Top" Width="120"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,132,0,0" Text="AnkiConnect server address" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox x:Name="AnkiUriTextBox" HorizontalAlignment="Right" Margin="0,132,20,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="210"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,97,0,0" Text="Use name dictionary (requires restart)" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <CheckBox x:Name="UseJMnedictCheckBox" Content="" HorizontalAlignment="Right" Margin="0,102,20,0" VerticalAlignment="Top" Padding="0,0,0,0"/>
                    <CheckBox x:Name="ForceAnkiSyncCheckBox" Content="" HorizontalAlignment="Right" Margin="0,169,20,0" VerticalAlignment="Top" Padding="0,0,0,0"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,165,0,0" Text="Force Anki sync" TextWrapping="Wrap" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Textbox">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left" Margin="25,151,0,0" Text="Background color" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <Button x:Name="TextboxBackgroundColorButton" Content="" HorizontalAlignment="Right" Margin="0,146,20,0" VerticalAlignment="Top" Width="60" Click="TextboxBackgroundColorButton_Click" BorderThickness="5,5,5,5" Height="32" BorderBrush="#FF707070"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,191,0,0" Text="Text color" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <Button x:Name="TextboxTextColorButton" Content="" HorizontalAlignment="Right" Margin="0,186,20,0" VerticalAlignment="Top" Width="60" Height="32" BorderThickness="5,5,5,5" Click="TextboxTextColorButton_Click" BorderBrush="#FF707070"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,63,0,0" Text="Font size" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <WindowsFormsHost  Margin="0,70,20,0" Padding="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Height="30">
                        <wf:NumericUpDown x:Name="TextboxTextSizeNumericUpDown" BorderStyle="FixedSingle"  Maximum="300" Minimum="1" Margin="0,0,0,0" Padding="0,0,0,0" Height="50"/>
                    </WindowsFormsHost>
                    <TextBlock HorizontalAlignment="Left" Margin="25,111,0,0" Text="Opacity" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.518,-0.013"/>
                    <WindowsFormsHost  Margin="0,107,20,0" Padding="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Height="30">
                        <wf:NumericUpDown x:Name="TextboxOpacityNumericUpDown" BorderStyle="FixedSingle"  Maximum="100" Minimum="1" Margin="0,0,0,0" Padding="0,0,0,0" Height="50"/>
                    </WindowsFormsHost>
                    <TextBlock HorizontalAlignment="Left" Margin="25,25,0,0" Text="Font" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <ComboBox x:Name="FontComboBox" HorizontalAlignment="Right" Margin="0,34,20,0" VerticalAlignment="Top" Width="210"/>
                </Grid>
            </TabItem>
            <TabItem Header="Popup">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left" Margin="25,25,0,0" Text="Background color" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,105,0,0" Text="Primary spelling color" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <Button x:Name="PopupPrimarySpellingColorButton" Content="" HorizontalAlignment="Right" Margin="0,100,20,0" VerticalAlignment="Top" Width="60" BorderThickness="5,5,5,5" Height="32" BorderBrush="#FF707070"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,145,0,0" Text="Primary spelling font size" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <WindowsFormsHost x:Name="PopupPrimarySpellingFontSizeNumericUpDown"  Margin="0,141,20,0" Padding="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Height="30">
                        <wf:NumericUpDown x:Name="PopupPrimarySpellingSizeNumericUpDown" BorderStyle="FixedSingle"  Maximum="300" Minimum="1" Margin="0,0,0,0" Padding="0,0,0,0" Height="50"/>
                    </WindowsFormsHost>
                    <TextBlock HorizontalAlignment="Left" Margin="25,187,0,0" Text="Reading color" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,225,0,0" Text="Reading font size" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="27,349,0,0" Text="Definition color" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="27,388,0,0" Text="Definition font size" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="27,425,0,0" Text="Frequency color" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,463,0,0" Text="Frequency font size" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,267,0,0" Text="Alternative spelling color" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,308,0,0" Text="Alternative spelling font size" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,505,0,0" Text="Deconjugation info color" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.54,-0.154"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,551,0,0" Text="Deconjugation info font size" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.761,0.491"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,64,0,0" Text="Opacity" TextWrapping="Wrap" VerticalAlignment="Top"/>

                    <WindowsFormsHost x:Name="PopupDeconjugationInfoFontSizeNumericUpDown"  Margin="0,558,20,0" Padding="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Height="30">
                        <wf:NumericUpDown x:Name="PopupAlternativeSpellingSizeNumericUpDown" BorderStyle="FixedSingle"  Maximum="300" Minimum="1" Margin="0,0,0,0" Padding="0,0,0,0" Height="50"/>
                    </WindowsFormsHost>
                    <Button x:Name="PopupBackgroundColorButton" Content="" HorizontalAlignment="Right" Margin="0,19,20,0" VerticalAlignment="Top" Width="60" BorderThickness="5,5,5,5" Height="32" BorderBrush="#FF707070"/>
                    <Button x:Name="PopupDeconjugationInfoColorButton" Content="" HorizontalAlignment="Right" Margin="0,510,20,0" VerticalAlignment="Top" Width="60" BorderThickness="5,5,5,5" Height="32" BorderBrush="#FF707070"/>
                    <Button x:Name="PopupReadingColorButton" Content="" HorizontalAlignment="Right" Margin="0,182,20,0" VerticalAlignment="Top" Width="60" BorderThickness="5,5,5,5" Height="32" BorderBrush="#FF707070"/>
                    <WindowsFormsHost x:Name="PopupOpacityNumericUpDown"  Margin="0,60,20,0" Padding="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Height="30">
                        <wf:NumericUpDown x:Name="PopupPrimarySpellingSizeNumericUpDown1" BorderStyle="FixedSingle"  Maximum="300" Minimum="1" Margin="0,0,0,0" Padding="0,0,0,0" Height="50"/>
                    </WindowsFormsHost>
                    <WindowsFormsHost x:Name="PopupReadingFontSizeNumericUpDown"  Margin="0,225,20,0" Padding="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Height="30">
                        <wf:NumericUpDown x:Name="PopupPrimarySpellingSizeNumericUpDown3" BorderStyle="FixedSingle"  Maximum="300" Minimum="1" Margin="0,0,0,0" Padding="0,0,0,0" Height="50"/>
                    </WindowsFormsHost>
                    <Button x:Name="PopupAlternativeSpellingColorButton" Content="" HorizontalAlignment="Right" Margin="0,262,20,0" VerticalAlignment="Top" Width="60" BorderThickness="5,5,5,5" Height="32" BorderBrush="#FF707070"/>
                    <Button x:Name="PopupDefinitionColorButton" Content="" HorizontalAlignment="Right" Margin="0,344,20,0" VerticalAlignment="Top" Width="60" BorderThickness="5,5,5,5" Height="32" BorderBrush="#FF707070"/>
                    <WindowsFormsHost x:Name="PopupAlternativeSpellingFontSizeNumericUpDown"  Margin="0,304,20,0" Padding="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Height="30">
                        <wf:NumericUpDown x:Name="PopupAlternativeSpellingSizeNumericUpDown1" BorderStyle="FixedSingle"  Maximum="300" Minimum="1" Margin="0,0,0,0" Padding="0,0,0,0" Height="50"/>
                    </WindowsFormsHost>
                    <WindowsFormsHost x:Name="PopupDefinitionFontSizeNumericUpDown"  Margin="0,388,20,0" Padding="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Height="30">
                        <wf:NumericUpDown x:Name="PopupAlternativeSpellingSizeNumericUpDown2" BorderStyle="FixedSingle"  Maximum="300" Minimum="1" Margin="0,0,0,0" Padding="0,0,0,0" Height="50"/>
                    </WindowsFormsHost>
                    <Button x:Name="PopupFrequencyColorButton" Content="" HorizontalAlignment="Right" Margin="0,430,20,0" VerticalAlignment="Top" Width="60" BorderThickness="5,5,5,5" Height="32" BorderBrush="#FF707070"/>
                    <WindowsFormsHost x:Name="PopupFrequencyFontSizeNumericUpDown"  Margin="0,470,20,0" Padding="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Height="30">
                        <wf:NumericUpDown x:Name="PopupAlternativeSpellingSizeNumericUpDown3" BorderStyle="FixedSingle"  Maximum="300" Minimum="1" Margin="0,0,0,0" Padding="0,0,0,0" Height="50"/>
                    </WindowsFormsHost>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
