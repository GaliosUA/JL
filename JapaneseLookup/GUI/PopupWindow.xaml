<Window x:Class="JapaneseLookup.GUI.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JapaneseLookup"
        mc:Ignorable="d"
        Title="PopupWindow"
        Width="Auto" Height="Auto" SizeToContent="Height" MaxWidth="700" MaxHeight="520"
        Background="#FF2C2B2B" Foreground="#FF3C3783"
        Topmost="True" WindowStyle="None" AllowsTransparency="true" ShowInTaskbar="False"
        KeyDown="Window_KeyDown" Closing="Window_Closing">

    <ScrollViewer x:Name="PopUpScrollViewer" VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Top">
        <Grid>
            <StackPanel x:Name="StackPanel" />
        </Grid>
    </ScrollViewer>
</Window>