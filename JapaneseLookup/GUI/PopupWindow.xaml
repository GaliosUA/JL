<Window x:Class="JapaneseLookup.GUI.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JapaneseLookup"
        mc:Ignorable="d"
        Title="PopupWindow" MaxWidth="430" MaxHeight="620" Background="#FF2C2B2B" Foreground="#FF3C3783" Topmost="True"
        WindowStyle="None" AllowsTransparency="true" KeyDown="Window_KeyDown">

    <ScrollViewer x:Name="ScrollViewer" VerticalScrollBarVisibility="Auto">
        <Grid>
            <StackPanel x:Name="StackPanel" KeyDown="StackPanel_KeyDown">
                <!--<TextBox x:Name="CardTextBox" HorizontalAlignment="Left" Margin="27,43,0,0" TextWrapping="Wrap"
                     VerticalAlignment="Top" Width="auto" Height="auto" Background="#FF2C2B2B" Foreground="White"
                     FontSize="15" />-->
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>