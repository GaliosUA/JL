<Window x:Class="JapaneseLookup.GUI.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:JapaneseLookup.GUI"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Focusable="False"
        Title="AlertWindow" Height="128" Width="256" Topmost="True">
    <Grid>
        <TextBox Name="AlertWindowTextBox"
                 Focusable="False"
                 FontSize="25"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 IsUndoEnabled="False" />
    </Grid>
</Window>