<Window x:Class="JL.Windows.GUI.EditDictionaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Dictionary" Height="400" Width="400" ResizeMode="NoResize" SizeToContent="Height"
        Topmost="True" Loaded="Window_Loaded" ShowInTaskbar="False">
    <Grid Background="Black">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,20,20">
            <TextBlock Foreground="White" Text="Dict Type" TextWrapping="Wrap" Margin="0,0,0,10" />
            <ComboBox Name="ComboBoxDictType" Width="230" Margin="10" HorizontalAlignment="Left" IsEnabled="False" />

            <TextBlock Foreground="White" Text="Path" TextWrapping="Wrap" Margin="0,10,0,10" />
            <WrapPanel>
                <TextBox Name="TextBlockPath" Foreground="White" Width="230"
                         Text=""
                         Margin="10"
                         IsReadOnly="True" />
                <Button Name="BrowsePathButton" Content="..." Click="BrowsePathButton_OnClick"
                        IsEnabled="{Binding ElementName=ComboBoxDictType,Path=Text.Length}">
                </Button>
            </WrapPanel>

            <StackPanel Name="StackPanelOptions" Visibility="Collapsed">
                <TextBlock Foreground="White" Text="Options" TextWrapping="Wrap" Margin="0,10,0,10" />

                <DockPanel Name="DockPanelNewline" Visibility="Collapsed">
                    <CheckBox Name="CheckBoxNewline" Margin="10"></CheckBox>
                    <TextBlock Foreground="White" Text="Newline between definitions" TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               Margin="0,10,0,10" />
                </DockPanel>

                <DockPanel Name="DockPanelExamples" Visibility="Collapsed">
                    <ComboBox Name="ComboBoxExamples" Margin="10" Width="100"> </ComboBox>
                    <TextBlock Foreground="White" Text="Examples" TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               Margin="0,10,0,10" />
                </DockPanel>

                <DockPanel Name="DockPanelKanji" Visibility="Collapsed">
                    <CheckBox Name="CheckBoxKanji" Margin="10"></CheckBox>
                    <TextBlock Foreground="White" Text="Don't show results unless in Kanji Mode" TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               Margin="0,10,0,10" />
                </DockPanel>

            </StackPanel>
        </StackPanel>

        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20,320,20,20">
            <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    Margin="0,20,20,0" FontSize="16" Width="70" Height="35" Click="CancelButton_Click" />
            <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="20,20,0,0" FontSize="16" Width="70" Height="35" Click="SaveButton_Click" />
        </WrapPanel>
    </Grid>
</Window>
